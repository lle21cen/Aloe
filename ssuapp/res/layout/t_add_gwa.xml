<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.android.gaje.AddGwa" >

    <Spinner
        android:id="@+id/select_gwa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_gwa"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/year_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="year"
            android:textSize="30dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/mon_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="month"
            android:textSize="30dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/day_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="day"
            android:textSize="30dp"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linelay"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="20dp" />

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>
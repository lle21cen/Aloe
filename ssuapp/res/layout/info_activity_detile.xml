                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" 
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/file4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" 
          		android:textSize="20dp"
                />

            <TextView
                android:id="@+id/file5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" 
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/file6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" 
                />

            <TextView
                android:id="@+id/file7"
